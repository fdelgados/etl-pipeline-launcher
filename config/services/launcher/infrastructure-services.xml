<?xml version="1.0" encoding="utf-8" standalone="no"?>

<services>
    <service id="launcher.pipeline.infrastructure.persistence.sqlalchemy.repository.sql_alchemy_pipeline_repository"
             class="launcher.pipeline.infrastructure.persistence.pipeline.sqlalchemy.pipeline_repository.PipelineRepositoryImpl" />

    <service id="launcher.pipeline.infrastructure.persistence.sqlalchemy.repository.sql_alchemy_page_repository"
             class="launcher.pipeline.infrastructure.persistence.page.mongodb.page_repository.MongoDbPageRepository">
        <argument name="database" value="web_corpus" type="parameter" />
        <argument name="collection" value="pages" type="parameter" />
    </service>

    <service id="launcher.pipeline.infrastructure.scraping.beautiful_soup.scraper.beautiful_soup_web_scraper"
             class="launcher.pipeline.infrastructure.scraping.beautiful_soup.scraper.BeautifulSoupWebScraper">
        <argument name="cache" value="shared.domain.service.caching.cache.cache" type="service" />
    </service>

    <service id="launcher.pipeline.infrastructure.scraping.beautiful_soup.scraper.beautiful_soup_sitemap_scraper"
             class="launcher.pipeline.infrastructure.scraping.beautiful_soup.scraper.BeautifulSoupSitemapScraper" />
</services>
