<?xml version="1.0" encoding="utf-8" standalone="no"?>

<services>
    <service id="corpus.etl.application.start.start_etl.etl_starter"
             class="corpus.etl.application.start.start_etl.EtlStarter">
        <argument name="etl_repository" value="corpus.etl.domain.model.etl.etl_repository" type="service" />
    </service>

    <service id="corpus.etl.application.extract.listeners.extract_data_on_etl_started"
             class="corpus.etl.application.extract.listeners.ExtractDataOnEtlStarted">
        <argument name="extract_data_service" value="corpus.etl.application.extract.data_extractor.data_extractor" type="service"/>
    </service>

    <service id="corpus.etl.application.extract.data_extractor.data_extractor"
             class="corpus.etl.application.extract.data_extractor.DataExtractor">
        <argument name="etl_repository" value="corpus.etl.domain.model.etl.etl_repository" type="service"/>
        <argument name="page_repository" value="corpus.etl.domain.model.page.page_repository" type="service"/>
        <argument name="page_retriever" value="corpus.etl.domain.service.content.page_retriever.page_retriever" type="service"/>
        <argument name="url_source" value="corpus.etl.domain.service.content.url_source.url_source" type="service"/>
        <argument name="logger" value="shared.domain.service.logging.logger.logger" type="service"/>
        <argument name="progress_bar" value="shared.domain.service.logging.progress_bar" type="service"/>
    </service>

</services>
