<?xml version="1.0" encoding="utf-8" standalone="no"?>

<services>
    <service id="corpus_builder.build.infrastructure.persistence.build.sqlalchemy.build_repository.build_repository_impl"
             class="corpus_builder.build.infrastructure.persistence.build.sqlalchemy.build_repository.BuildRepositoryImpl" />

    <service id="corpus_builder.build.infrastructure.persistence.page.sqlalchemy.page_repository.page_repository_impl"
             class="corpus_builder.build.infrastructure.persistence.page.sqlalchemy.page_repository.PageRepositoryImpl"/>

    <service id="corpus_builder.build.infrastructure.persistence.page.mongodb.page_repository.mongo_db_page_repository"
             class="corpus_builder.build.infrastructure.persistence.page.mongodb.page_repository.MongoDbPageRepository">
        <argument name="database" value="web_corpus" type="parameter" />
    </service>

    <service id="corpus_builder.build.infrastructure.content.beautiful_soup.page_retriever.page_retriever_impl"
             class="corpus_builder.build.infrastructure.content.beautiful_soup.page_retriever.PageRetrieverImpl">
        <argument name="cache" value="shared.domain.service.caching.cache.cache" type="service" />
    </service>

    <service id="corpus_builder.build.infrastructure.content.beautiful_soup.url_source.url_source_impl"
             class="corpus_builder.build.infrastructure.content.beautiful_soup.url_source.UrlSourceImpl" />

    <service id="corpus_builder.corpus.infrastructure.persistence.corpus.sqlalchemy.corpus_repository.corpus_repository_impl"
             class="corpus_builder.corpus.infrastructure.persistence.corpus.sqlalchemy.corpus_repository.CorpusRepositoryImpl" />
</services>
