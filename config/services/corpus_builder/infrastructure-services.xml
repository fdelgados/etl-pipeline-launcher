<?xml version="1.0" encoding="utf-8" standalone="no"?>

<services>
    <service id="corpus_builder.build.infrastructure.persistence.sqlalchemy.build_repository.build_repository_impl"
             class="corpus_builder.build.infrastructure.persistence.sqlalchemy.build_repository.BuildRepositoryImpl" />

    <service id="corpus_builder.build.infrastructure.persistence.mongodb.page_repository.mongo_db_page_repository"
             class="corpus_builder.build.infrastructure.persistence.mongodb.page_repository.MongoDbPageRepository">
        <argument name="database" value="web_corpus" type="parameter" />
    </service>

    <service id="corpus_builder.build.infrastructure.content.beautiful_soup.page_retriever.page_retriever_impl"
             class="corpus_builder.build.infrastructure.content.beautiful_soup.page_retriever.PageRetrieverImpl">
        <argument name="cache" value="shared.domain.service.caching.cache.cache" type="service" />
    </service>

    <service id="corpus_builder.build.infrastructure.content.beautiful_soup.url_source.url_source_impl"
             class="corpus_builder.build.infrastructure.content.beautiful_soup.url_source.UrlSourceImpl" />

    <service id="corpus_builder.corpus.infrastructure.persistence.sqlalchemy.corpus_repository.corpus_repository_impl"
             class="corpus_builder.corpus.infrastructure.persistence.sqlalchemy.corpus_repository.CorpusRepositoryImpl" />

    <service id="corpus_builder.infrastructure.persistence.sqlalchemy.dbal.sql_alchemy_dbal_service"
             class="shared.infrastructure.persistence.sqlalchemy.dbal.SqlAlchemyDbalService">
        <argument name="context" value="corpus_builder" type="parameter" />
    </service>

    <service id="corpus_builder.infrastructure.event.mysql.event_store.mysql_event_store"
             class="shared.infrastructure.event.mysql.event_store.MysqlEventStore">
        <argument name="db_service" value="corpus_builder.infrastructure.persistence.sqlalchemy.dbal.sql_alchemy_dbal_service" type="service" />
    </service>
</services>
